<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_unit_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="fiuba.tallerdeproyectos2.Activities.UnitDetailsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/html"
        android:padding="10dp"/>

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/video"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/exam_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#8BC34A"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:textStyle="bold"
            android:onClick="examButtonClick"
            android:text="Rendir Examen"/>

        <Button
            android:id="@+id/exam_pass_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#B71C1C"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:textStyle="bold"
            android:text="Examen Rendido"/>

        <Button
            android:id="@+id/practice_exam_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#1976D2"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:textStyle="bold"
            android:onClick="practiceExamButtonClick"
            android:text="Practicar Examen"/>

    </LinearLayout>

</LinearLayout>
